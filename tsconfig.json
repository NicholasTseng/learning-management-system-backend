{
  "compilerOptions": {
    "target": "ES6",                        
    "module": "commonjs",                 
    "rootDir": "./src",                     
    "outDir": "./dist",                     
    "strict": true,                         
    "esModuleInterop": true,            
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "strict": true,
  "noUnusedLocals": true,
  "noUnusedParameters": true,
  "noFallthroughCasesInSwitch": true,
}
